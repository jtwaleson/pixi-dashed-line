{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2022", "DOM"],
        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": ["lib/**/*"],
    "exclude": ["node_modules", "dist"]
}
